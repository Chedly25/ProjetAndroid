<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/r_book_txv_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Nom"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/r_book_txv_lieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Lieu"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="@+id/r_book_txv_nom"
        app:layout_constraintTop_toBottomOf="@+id/r_book_txv_nom" />

    <TextView
        android:id="@+id/r_book_txv_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:text="region"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="@+id/r_book_txv_nom"
        app:layout_constraintTop_toBottomOf="@+id/r_book_txv_nom" />

    <TextView
        android:id="@+id/r_book_txv_favori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginTop="12dp"
        android:text="favori"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="@+id/r_book_txv_nom"
        app:layout_constraintTop_toBottomOf="@+id/r_book_txv_nom" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="57dp"
        android:layout_height="47dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/r_book_txv_nom"
        app:layout_constraintTop_toBottomOf="@+id/r_book_txv_nom"
        tools:srcCompat="@drawable/logo_vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>